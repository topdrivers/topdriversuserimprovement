<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/lnrInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/transparent">


                <ImageView
                    android:id="@+id/imgSos"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_above="@+id/lnrFlowInvoice"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/sos"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrInvoiceSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="vertical">

                <com.topdrivers.userv2.Utils.MyBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/invoice"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/bookingIDLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/book_name"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />


                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/booking_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/distance_travelled"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblDistanceCovered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_distance"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/time_taken"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblTimeTaken"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_time_travel"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblBasePrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/extra_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblExtraPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/distance_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblDistancePrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/tax"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblTaxPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/walletDetectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/wallet_detection"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblWalletPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discountDetectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/discount_detection"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblDiscountPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/commision"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblCommision"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/myBoldTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/total"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_15sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/sample_base_price"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_22sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPaymentTypeInvoice"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/money_icon" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblPaymentTypeInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/selected_payment_mode"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_13sdp" />

                    <com.topdrivers.userv2.Utils.MyBoldTextView
                        android:id="@+id/lblPaymentChangeInvoice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="@string/change"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <com.topdrivers.userv2.Utils.MyButton
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_button"
                android:text="@string/pay_now"
                android:textColor="@color/button_text_color"
                android:visibility="gone" />

            <com.topdrivers.userv2.Utils.MyButton
                android:id="@+id/btnPaymentDoneBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/full_rounded_button"
                android:text="@string/done"
                android:textColor="@color/button_text_color"
                android:visibility="gone" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>